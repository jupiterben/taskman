{
    "compilerOptions": {
        "outDir": "./dist",
        "allowJs": true,
        "target": "es6",
        "jsx": "react",
        "lib": [
            "ES6",
            "DOM"
        ],
        "moduleResolution": "node",
        "noEmitOnError": true,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "declaration": true,
        "sourceMap": true,
        "module": "CommonJS"
    },
    "include": [
        "service/**/*",
        "src/**/*",
    ]
}